{
  "name": "@qlever-llc/oada-service-template",
  "version": "1.0.0",
  "description": "An oada microservice",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "src/**/*",
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "start": "node ${INSPECT:-} --enable-source-maps dist/index.js",
    "test": "yarn build test && c8 ava",
    "test:debug": "ava -T 60m -svc 1 --no-worker-threads",
    "lint": "eslint ."
  },
  "ava": {
    "failFast": false,
    "files": [
      "**/*.test.ts"
    ],
    "typescript": {
      "extensions": [
        "ts"
      ],
      "rewritePaths": {
        "src/": "dist/",
        "test/": ".test/"
      },
      "compile": false
    }
  },
  "c8": {
    "reporter": [
      "text",
      "lcov"
    ],
    "all": true,
    "src": "src",
    "exclude": [
      "*.d.ts",
      ".pnp.*",
      ".test"
    ]
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@oada/client": "^5.1.0",
    "@oada/lib-config": "^3.9.1",
    "@oada/lib-prom": "^3.8.0",
    "@oada/pino-debug": "^3.10.0",
    "@oada/types": "^3.5.3",
    "debug": "^4.3.5",
    "tslib": "^2.6.3"
  },
  "devDependencies": {
    "@ava/typescript": "^5.0.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/convict": "^6.1.6",
    "@types/debug": "^4.1.12",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "@yarnpkg/sdks": "^3.1.3",
    "ava": "6.1.3",
    "c8": "^10.1.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-xo": "^0.45.0",
    "eslint-config-xo-typescript": "^4.0.0",
    "eslint-plugin-array-func": "^5.0.1",
    "eslint-plugin-ava": "^15.0.1",
    "eslint-plugin-escompat": "^3.4.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-i18n-text": "^1.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-no-constructor-bind": "^2.0.4",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-no-secrets": "^1.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-notice": "^1.0.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.4.0",
    "eslint-plugin-regexp": "^2.6.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^1.0.4-alpha.1",
    "eslint-plugin-unicorn": "^54.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3"
  },
  "resolutions": {
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.2/xlsx-0.20.2.tgz"
  },
  "packageManager": "yarn@4.3.1",
  "volta": {
    "node": "20.14.0"
  }
}
